<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="Stencil.Native.Views.Standard.v1_0.PlainText">
    <DataTemplate x:Key="plainText">
        <!--<ViewCell>-->
        <StackLayout Orientation="Vertical" 
                     HorizontalOptions="Fill" 
                     Padding="{Binding PreparedData.Padding}" 
                     Margin="0" 
                     Spacing="0" 
                     BackgroundColor="{Binding PreparedData.BackgroundColor}">
            <Label Text="{Binding PreparedData.Text}"
                       HorizontalOptions="Start"
                       VerticalOptions="Start"
                       FontSize="{Binding PreparedData.FontSize}"
                       FontFamily="{StaticResource SansRegular}"
                       TextColor="{Binding PreparedData.TextColor}"
                       HorizontalTextAlignment="Start"
                       Margin="0" />
        </StackLayout>
        <!--</ViewCell>-->
    </DataTemplate>
</ResourceDictionary>