<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="Stencil.Native.Views.Standard.v1_0.SimpleEntry">
    <DataTemplate x:Key="simpleEntry">
        <Grid RowSpacing="0"
                      ColumnSpacing="0"
                      Margin="0"
                      Padding="0">
            <Entry Text="{Binding PreparedData.Input, Mode=TwoWay}"
                    Placeholder="{Binding PreparedData.Placeholder}"
                    IsPassword="{Binding PreparedData.IsPassword}"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>