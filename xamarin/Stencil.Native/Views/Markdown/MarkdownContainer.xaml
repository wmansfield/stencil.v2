<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:stencil="clr-namespace:Stencil.Native.Views;assembly=Stencil.Native"
                    x:Class="Stencil.Native.Views.Markdown.MarkdownContainer">
    <DataTemplate x:Key="markdownContainer">
        <stencil:MarkdownView 
            HorizontalOptions="Fill"
            VerticalOptions="Start"
            LinkTappedCommand="{Binding PreparedData.LinkTappedCommand}"
            Sections="{Binding PreparedData.sections}"
            FontSize="{Binding PreparedData.FontSize}"
            SuppressDivider="{Binding PreparedData.SuppressDivider}">
        </stencil:MarkdownView>
    </DataTemplate>
</ResourceDictionary>