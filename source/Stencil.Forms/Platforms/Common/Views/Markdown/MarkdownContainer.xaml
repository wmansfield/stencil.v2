<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:Stencil.Forms.Views.Markdown"
                    xmlns:stencil="clr-namespace:Stencil.Forms.Views;assembly=Stencil.Native"
                    x:Class="Stencil.Forms.Views.Markdown.MarkdownContainer">
    <DataTemplate x:Key="markdownContainer" x:DataType="local:MarkdownContainerContext">
        <stencil:MarkdownView 
            HorizontalOptions="Fill"
            VerticalOptions="Start"
            LinkTappedCommand="{Binding LinkTappedCommand}"
            Sections="{Binding sections}"
            FontSize="{Binding FontSize}"
            SuppressDivider="{Binding SuppressDivider}">
        </stencil:MarkdownView>
    </DataTemplate>
</ResourceDictionary>