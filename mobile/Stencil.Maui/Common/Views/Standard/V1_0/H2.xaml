<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:Stencil.Maui.Views.Standard.v1_0"
                    x:Class="Stencil.Maui.Views.Standard.v1_0.H2">
    <DataTemplate x:Key="h2" x:DataType="local:H2Context">
        <!--<ViewCell>-->
        <VerticalStackLayout
            Spacing="0"
            Padding="0"
            VerticalOptions="Center">
            <Label Text="{Binding Text}"
                   HorizontalOptions="Fill"
                   VerticalOptions="Start"
                   Padding="{Binding Padding}"
                   FontSize="{Binding FontSize}"
                   FontFamily="{Binding FontFamily}"
                   FontAutoScalingEnabled="false"
                   TextColor="{Binding TextColor, Converter={StaticResource stringToColorConverter}}"
                   HorizontalTextAlignment="Center"
                   Margin="0,8" />
        </VerticalStackLayout>
        <!--</ViewCell>-->
    </DataTemplate>
</ResourceDictionary>