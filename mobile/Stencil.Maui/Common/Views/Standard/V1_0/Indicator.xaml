<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:Stencil.Maui.Views.Standard.v1_0"
                    x:Class="Stencil.Maui.Views.Standard.v1_0.Indicator">
    <DataTemplate x:Key="indicator" x:DataType="local:IndicatorContext">
        <IndicatorView BackgroundColor="{Binding BackgroundColor, Converter={StaticResource stringToColorConverter}}"
                       IndicatorColor="{Binding Color, Converter={StaticResource stringToColorConverter}}"
                       SelectedIndicatorColor="{Binding SelectedColor, Converter={StaticResource stringToColorConverter}}"
                       IsVisible="{Binding Visible}"
                       Margin="{Binding UIMargin}"
                       IndicatorSize="{Binding IndicatorSize}"
                       MaximumVisible="{Binding MaximumVisible}"
                       Count="{Binding ItemCount}"
                       Position="{Binding CurrentPosition, Mode=OneWay}"
                       HorizontalOptions="Fill" />
    </DataTemplate>
</ResourceDictionary>