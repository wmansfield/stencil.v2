<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:Stencil.Maui.Views.Standard.v1_0"
                    x:Class="Stencil.Maui.Views.Standard.v1_0.Image">
    <DataTemplate x:Key="image" x:DataType="local:ImageContext">
        <!--<ViewCell>-->
        <StackLayout Padding="{Binding UIPadding}"
                     BackgroundColor="{Binding BackgroundColor, Converter={StaticResource stringToColorConverter}}"
                     HorizontalOptions="Fill"
                     PropertyChanged="StackLayout_PropertyChanged">
            <Image Source="{Binding UISource}"
                    HeightRequest="{Binding Height}"
                    WidthRequest="{Binding Width}"
                    Margin="0"
                    Aspect="AspectFit"/>
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="Image_Tapped" />
            </StackLayout.GestureRecognizers>
        </StackLayout>
        <!--</ViewCell>-->
    </DataTemplate>
</ResourceDictionary>