<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:Stencil.Maui.Views.Standard.v1_0"
                    x:Class="Stencil.Maui.Views.Standard.v1_0.GroupBegin">
    <DataTemplate x:Key="groupBegin" x:DataType="local:GroupBeginContext">
        <!--<ViewCell>-->
        <!-- only grid allows pixel perfection adjustments cross platform -->
        <Grid HeightRequest="20"
              ColumnSpacing="0"
              RowSpacing="0"
              Margin="0"
              BackgroundColor="Transparent"
              HorizontalOptions="Fill">
            <Border StrokeThickness="0"
                    Margin="-1,0,-1,-2"
                    BackgroundColor="{Binding InnerColor, Converter={StaticResource stringToColorConverter}}"
                    HorizontalOptions="Fill">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10,10,0,0" />
                </Border.StrokeShape>
                <Label Text=" "/>
            </Border>
        </Grid>
        <!--</ViewCell>-->
    </DataTemplate>
</ResourceDictionary>