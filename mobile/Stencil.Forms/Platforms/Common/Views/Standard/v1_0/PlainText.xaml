<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:Stencil.Forms.Views.Standard.v1_0"
                    x:Class="Stencil.Forms.Views.Standard.v1_0.PlainText">
    <DataTemplate x:Key="plainText" x:DataType="local:PlainTextContext">
        <!--<ViewCell>-->
        <Label Text="{Binding Text}"
                BackgroundColor="{Binding BackgroundColor}"
                IsVisible="{Binding UIVisible}"
                HorizontalOptions="Fill"
                VerticalOptions="Start"
                LineBreakMode="WordWrap"
                FontSize="{Binding FontSize}"
                FontFamily="{Binding FontFamily}"
                TextColor="{Binding TextColor}"
                Padding="{Binding Padding}"
                Margin="{Binding Margin}"
                HorizontalTextAlignment="{Binding UITextAlignment}"/>
        <!--</ViewCell>-->
    </DataTemplate>
</ResourceDictionary>