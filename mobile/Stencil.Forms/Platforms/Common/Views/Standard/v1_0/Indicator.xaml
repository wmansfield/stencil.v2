<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:Stencil.Forms.Views.Standard.v1_0"
                    x:Class="Stencil.Forms.Views.Standard.v1_0.Indicator">
    <DataTemplate x:Key="indicator" x:DataType="local:IndicatorContext">
        <IndicatorView BackgroundColor="{Binding BackgroundColor}"
                       IndicatorColor="{Binding Color}"
                       SelectedIndicatorColor="{Binding SelectedColor}"
                       IsVisible="{Binding Visible}"
                       Margin="{Binding Margin}"
                       IndicatorSize="{Binding IndicatorSize}"
                       MaximumVisible="{Binding MaximumVisible}"
                       Count="{Binding ItemCount}"
                       Position="{Binding CurrentPosition, Mode=OneWay}"
                       HorizontalOptions="Fill" />
    </DataTemplate>
</ResourceDictionary>