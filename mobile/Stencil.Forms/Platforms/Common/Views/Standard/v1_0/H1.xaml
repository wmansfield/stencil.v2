<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:Stencil.Forms.Views.Standard.v1_0"
                    x:Class="Stencil.Forms.Views.Standard.v1_0.H1">
    <DataTemplate x:Key="h1" x:DataType="local:H1Context">
        <!--<ViewCell>-->
        <!--<Margin is not visually needed, however, it fixes smooth scrolling>-->
        <Grid HorizontalOptions="Fill" 
              RowSpacing="0" ColumnSpacing="0"
              HeightRequest="{Binding HeightRequest}"
              Margin="{Binding Margin}" Padding="0"
              RowDefinitions="*">
            <Label HorizontalOptions="Fill"
                   BackgroundColor="{Binding BackgroundColor}"
                   Padding="{Binding Padding}"
                   Margin="0"
                   FontSize="{Binding FontSize}"
                   FontFamily="{Binding FontFamily}"
                   Text="{Binding Text}"
                   TextColor="{Binding TextColor}"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"/>
        </Grid>
        <!--</ViewCell>-->
    </DataTemplate>
</ResourceDictionary>