<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:Stencil.Forms.Views.Standard.v1_0"
                    x:Class="Stencil.Forms.Views.Standard.v1_0.H1">
    <DataTemplate x:Key="h1" x:DataType="local:H1Context">
        <!--<ViewCell>-->
        <!--<Margin is not visually needed, however, it fixes smooth scrolling>-->
        <Grid HorizontalOptions="Fill" 
              RowSpacing="0" ColumnSpacing="0"
              HeightRequest="{Binding HeightRequest}"
              Margin="3" Padding="0"
              BackgroundColor="{Binding BackgroundColor}"
              RowDefinitions="*">
            <Label Text="{Binding Text}"
                   HorizontalOptions="Fill"
                   VerticalOptions="Start"
                   Padding="{Binding Padding}"
                   FontSize="{StaticResource FontSizeH1}"
                   FontFamily="{StaticResource SansBold}"
                   TextColor="{Binding TextColor}"
                   HorizontalTextAlignment="Center"/>
        </Grid>
        <!--</ViewCell>-->
    </DataTemplate>
</ResourceDictionary>