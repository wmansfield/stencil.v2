<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:Stencil.Forms.Views.Standard.v1_0"
                    x:Class="Stencil.Forms.Views.Standard.v1_0.H3">
    <DataTemplate x:Key="h3" x:DataType="local:H3Context">
        <!--<ViewCell>-->
        <StackLayout Orientation="Vertical" HorizontalOptions="Fill" Padding="0" Margin="0" Spacing="0" BackgroundColor="{Binding BackgroundColor}">
            <Label Text="{Binding Text}"
                       HorizontalOptions="Fill"
                       VerticalOptions="Start"
                       FontSize="{StaticResource FontSizeH3}"
                       FontFamily="{StaticResource SansBold}"
                       TextColor="{Binding TextColor}"
                       HorizontalTextAlignment="Center"
                       Margin="0,8" />
        </StackLayout>
        <!--</ViewCell>-->
    </DataTemplate>
</ResourceDictionary>