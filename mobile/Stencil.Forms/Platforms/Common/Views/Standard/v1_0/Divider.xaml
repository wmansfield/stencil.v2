<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:Stencil.Forms.Views.Standard.v1_0"
                    x:Class="Stencil.Forms.Views.Standard.v1_0.Divider">
    <DataTemplate x:Key="divider" x:DataType="local:DividerContext">
        <!--<ViewCell>-->
            <AbsoluteLayout HeightRequest="{Binding Height}" 
                            BackgroundColor="{Binding BackgroundColor}" 
                            Padding="{Binding Padding}"
                            Margin="0"
                            IsClippedToBounds="True">
            <Line HorizontalOptions="Fill" VerticalOptions="Center" BackgroundColor="{Binding LineColor}" HeightRequest="{Binding LineHeight}"/>
        </AbsoluteLayout>
        <!--</ViewCell>-->
    </DataTemplate>
</ResourceDictionary>